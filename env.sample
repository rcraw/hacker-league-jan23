# OpenRouter API Key (Required for AI Chat Assistant)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_key_here

# Optional: Custom OpenRouter base URL
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Aider Environment Variables
# API Keys and Settings
AIDER_OPENAI_API_KEY=your_openai_key_here
AIDER_ANTHROPIC_API_KEY=your_anthropic_key_here
AIDER_OPENAI_API_BASE=https://api.openai.com/v1
AIDER_SET_ENV=KEY1=value1;KEY2=value2

# Model Settings
AIDER_MODEL=gpt-4-1106-preview
AIDER_WEAK_MODEL=gpt-3.5-turbo
AIDER_EDITOR_MODEL=gpt-4
AIDER_TIMEOUT=60
AIDER_EDIT_FORMAT=default
AIDER_MAX_CHAT_HISTORY_TOKENS=8000

# Git Settings
AIDER_GIT=true
AIDER_AUTO_COMMITS=true
AIDER_DIRTY_COMMITS=true
AIDER_COMMIT_PROMPT="Describe the changes made:"

# Output Settings
AIDER_DARK_MODE=true
AIDER_PRETTY=true
AIDER_STREAM=true
AIDER_USER_INPUT_COLOR=#00cc00
AIDER_ASSISTANT_OUTPUT_COLOR=#0088ff
AIDER_CODE_THEME=monokai

# History Settings
AIDER_INPUT_HISTORY_FILE=.aider.input.history
AIDER_CHAT_HISTORY_FILE=.aider.chat.history.md
AIDER_RESTORE_CHAT_HISTORY=true
AIDER_LLM_HISTORY_FILE=.aider.llm.history

# Testing and Linting
AIDER_AUTO_LINT=true
AIDER_LINT_CMD="python: flake8"
AIDER_AUTO_TEST=true
AIDER_TEST_CMD="python -m pytest"

# Cache and Performance
AIDER_CACHE_PROMPTS=true
AIDER_MAP_TOKENS=4000
AIDER_MAP_REFRESH=auto

# Voice Settings
AIDER_VOICE_FORMAT=wav
AIDER_VOICE_LANGUAGE=en
AIDER_VOICE_INPUT_DEVICE=default

# Other Settings
AIDER_ENCODING=utf-8
AIDER_LINE_ENDINGS=platform
AIDER_FANCY_INPUT=true
AIDER_MULTILINE=false
AIDER_DETECT_URLS=true
AIDER_EDITOR=vim